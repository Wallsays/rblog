<h1>Listing posts</h1>


<% @posts.each do |post| %>
  <div class="post">
    <h3><%= post.title %></h3>
    <%= post.content %><br />
    <div class="tags">
      <% if post.tags %>
        <% post.tags.each do |tag| %>
          <span class="label"><%= tag.name %></span>
        <% end %>
      <% end %>
    </div>
    <%= link_to 'Show', post %>
    <%= link_to 'Edit', edit_post_path(post) %>
    <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>   
<% end %>


<br />

<%= link_to 'New Post', new_post_path %>

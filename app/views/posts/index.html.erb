<h1>Listing posts</h1>


<% @posts.each do |post| %>
  
    <%= post.name %><br />
    <h3><%= post.title %></h3><br />
    <%= post.content %><br />
    <%= link_to 'Show', post %>
    <%= link_to 'Edit', edit_post_path(post) %>
    <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
    <p /> <p /> <p />
<% end %>


<br />

<%= link_to 'New Post', new_post_path %>
